<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/he"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical" >

    <com.gionee.widget.turnpager.TurnPagerView
        android:id="@+id/turnpager"
        android:layout_width="match_parent"
        android:layout_height="400dip" 
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/hell"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#55FFFF66"
            android:enabled="true"
            android:textColor="#99555555"
            android:textSize="300dp" 
            android:gravity="center"/>

        <GridView
            android:id="@+id/myGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="60dp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:layoutAnimation="@anim/layout_grid_fade"
            android:numColumns="auto_fit"
            android:padding="10dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" />

        <TextView
            android:id="@+id/hell0"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#55FF66FF"
            android:enabled="true"
            android:textColor="#99555555"
            android:textSize="300dp"
            android:gravity="center" />

        <ListView
            android:id="@+id/list"
            android:background="#ffffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ListView>
        
        
        <TextView
            android:id="@+id/hell1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#5566ffFF"
            android:enabled="true"
            android:textColor="#99555555"
            android:textSize="300dp" 
            android:gravity="center"/>
        
    </com.gionee.widget.turnpager.TurnPagerView>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="50dip">
        
        <Button
            android:id="@+id/pre_button"            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pre_page"/>
        
         <Button
            android:id="@+id/next_button"      
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next_page"/>
    </LinearLayout>
    
</LinearLayout>