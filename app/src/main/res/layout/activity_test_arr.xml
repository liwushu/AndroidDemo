<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activity.TestArrActivity">

    <Button
        android:id="@+id/dialog1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="120dp"
        android:text="dialog1"/>

    <Button
        android:id="@+id/dialog2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/dialog1"
        android:layout_margin="20dp"
        android:text="dialog2"/>


    <Button
        android:id="@+id/dialog3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/dialog2"
        android:layout_margin="20dp"
        android:text="dialog3"/>

    <Button
        android:id="@+id/dialog4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/dialog3"
        android:layout_margin="20dp"
        android:text="dialog4"/>

    <Button
        android:id="@+id/dialog5"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/dialog4"
        android:layout_margin="20dp"
        android:text="dialog5"/>
</RelativeLayout>
